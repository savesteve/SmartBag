 xsi:schemaLocation="http://www.blizzard.com/wow/ui/ 
 ..\..\FrameXML\UI.xsd">
 <Script File="SmartBag.lua"/>
 <Frame name="SmartBagFrame" hidden="true">
   <Scripts>
    <OnLoad>
      SmartBag_OnLoad();
      self:RegisterEvent("MERCHANT_SHOW");
      self:RegisterEvent("ADDON_LOADED");
      self:RegisterEvent("PLAYER_REGEN_ENABLED");
<!--       self:RegisterEvent("LeftButton"); -->
    </OnLoad>
    <OnEvent function="SmartBag_EventHandler"/>
  </Scripts>
</Frame>
<Frame name="SmartBagSettingsWindow" parent="UIParent" hidden="true" movable="true">
  <Size>
    <AbsDimension x="400" y="400" />
  </Size>
  <Anchors>
    <Anchor point="CENTER" />
  </Anchors>
  <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
   <BackgroundInsets>
    <AbsInset left="11" right="12" top="12" bottom="11"/>
  </BackgroundInsets>
  <TileSize>
    <AbsValue val="32"/>
  </TileSize>
  <EdgeSize>
    <AbsValue val="32"/>
  </EdgeSize>
</Backdrop>
<Scripts>
  <OnLoad>
    self:RegisterForDrag("LeftButton");
    tinsert(UISpecialFrames, self:GetName());
  </OnLoad>
  <OnDragStart>self:StartMoving();</OnDragStart>
  <OnDragStop>self:StopMovingOrSizing();</OnDragStop>
</Scripts>
<Frames>
  <Button inherits="UIPanelButtonTemplate" name="SellGreyButton">
    <Size x="80" y="35"/>
