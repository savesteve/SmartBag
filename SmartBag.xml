<Frame name="SmartBagSettingsWindow" parent="UIParent" hidden="true" movable="true">
  <Size>
    <AbsDimension x="400" y="400" />
  </Size>
  <Anchors>
    <Anchor point="CENTER" />
  </Anchors>
