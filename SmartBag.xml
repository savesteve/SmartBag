<Ui xmlns="http://www.blizzard.com/wow/ui/" 
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
 xsi:schemaLocation="http://www.blizzard.com/wow/ui/ 
 ..\..\FrameXML\UI.xsd">
  <Script File="SmartBag.lua"/>
  <Frame name="SmartBagFrame" hidden="true">
   <Scripts>
    <OnLoad>
   	SmartBag_OnLoad();
   	self:RegisterEvent("MERCHANT_SHOW");
   	self:RegisterEvent("PLAYER_LOGOUT");
    self:RegisterEvent("ADDON_LOADED");
    </OnLoad>
    <OnEvent function="SmartBag_EventHandler"/>
   </Scripts>
  </Frame>

  <Frame name="SmartBagSettingsWindow" parent="UIParent" hidden="true">
    <Size>
      <AbsDimension x="400" y="400" />
    </Size>
    <Anchors>
      <Anchor point="CENTER" />
    </Anchors>
    <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background"
         edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
      <BackgroundInsets>
        <AbsInset left="11" right="12" top="12" bottom="11"/>
      </BackgroundInsets>
      <TileSize>
        <AbsValue val="32"/>
      </TileSize>
      <EdgeSize>
        <AbsValue val="32"/>
      </EdgeSize>
    </Backdrop>
    <Frames>
    <Button inherits="UIPanelButtonTemplate" text="OK">
      <Size x="80" y="35"/>
      <Anchors><Anchor point="BOTTOM" y="15"/></Anchors>
      <Texture setAllPoints="true" file="Interface\BUTTONS\CancelButton-Up" alphaMode="ADD"/>
      <Scripts>
      <OnClick>
      OkButton_OnClick();
      </OnClick>
      </Scripts>
    </Button>
    <Button inherits="UIPanelButtonTemplate" name="SellGreyButton">
      <Size x="80" y="35"/>
      <Anchors><Anchor point="TOP" x="130" y="-35"/></Anchors>
      <Texture setAllPoints="true" file="Interface\BUTTONS\CancelButton-Up" alphaMode="ADD"/>
      <Scripts>
      <OnClick>
        SellGreyButton_OnClick();
      </OnClick>
    </Scripts>
    </Button>
    <Button inherits="UIPanelButtonTemplate" name="KeepEquipmentButton">
      <Size x="80" y="35"/>
      <Anchors><Anchor point="TOP" x="130" y="-75"/></Anchors>
      <Texture setAllPoints="true" file="Interface\BUTTONS\CancelButton-Up" alphaMode="ADD"/>
      <Scripts>
      <OnClick>
        KeepEquipmentButton_OnClick();
      </OnClick>
    </Scripts>
    </Button>
    <Layers>
      <Layer level="ARTWORK">
        <FontString name="SellGreyLabel" text="Auto Sell Grey Items:">
          <Anchors>
            <Anchor point="TOP" x="-50" y="-35"/>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </Frames>
  </Frame>
</Ui> 